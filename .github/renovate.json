{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>rwunderer/renovate",
    "regexManagers:dockerfileVersions"
  ],

  "packageRules": [
    {
      "matchPackageNames": ["kubectl"],
      "addLabels": [
        "renovate_publish"
      ]
    },
    {
      "matchPackageNames": ["alpine"],
      "automerge": true
    }
  ]
}
